FROM python:3.12-slim

WORKDIR /app
COPY . /app

RUN pip install --no-cache-dir fastapi uvicorn psycopg[binary] sqlalchemy redis

ENV PYTHONPATH=/app/apps/api_gateway/src:/app/packages/db/src:/app/packages/queue/src

EXPOSE 8000
CMD ["uvicorn", "api_gateway.main:app", "--host", "0.0.0.0", "--port", "8000"]
